<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-center">Eat-da-Burger</h1>
        <p class="lead text-center">Believe in something, even if it means over eatting. Just Eat It.</p>
    </div>
</div>

<div class="container full-image">
        <div class="col-lg-12">
            <div class="leftBurgers text-center">
                <h2 class="heading">Burgers</h2>
                <ul>
                    {{#each burgers}} {{#unless this.devoured}}
                    <li>
                        <p class="burgerType">{{this.burger_name}}</p>
                        <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button class="btnDevour" type="submit">Devour it</button>
                        </form>
                    </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>
        </div>

        <div class="col-lg-12 text-center">
            <div class="input">
                <h2 class="heading" id="add">Build a New Burger</h2>
                <div class="form-group">
                    <form method="POST" action="burgers/insertOne" class="addOne text-center">
                        <textarea id="textArea" type="text" name="burger_name" rows="2" cols="40"></textarea>
                        <button id="btnCreate" type="submit">Create Your Burger!</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-12 text-center">
            <div class="rightBurgers">
                <h2 class="heading">Classics</h2>
                <ul>
                    {{#each burgers}} {{#if this.devoured}}
                    <li>
                        <p class="burgerType">{{this.burger_name}}</p>
                        <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
                            <button class="btnDevour" type="submit">Delete it</button>
                        </form>
                    </li>
                    {{/if}} {{/each}}
                </ul>
            </div>
        </div>
    
</div>

</div>














</div>